datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Watched {
  id         String   @id @default(uuid())
  user_id    String   @map("user_id")
  movie_id   Int
  movie_name String
  themes     Int[]
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@map("watcheds")
}

model Pack {
  id         String   @id @default(uuid())
  name       String
  themes     Int[]
  user_id    String   @unique @map("user_id")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id])

  @@map("packs")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  borndate   DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  watcheds Watched[]
  packs    Pack?

  @@map("users")
}
